{
  "compilerOptions": {
    "strict": true,
    "outDir": "js",
    "target": "es2019",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "incremental": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest", "jest-extended"],
    "declarationDir": "dist/types",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": ["ts/**/*.spec.ts"],
  "include": ["ts"]
}
